<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.metrostate.todolist.TodoItemController">
    <children>
        <VBox>
            <TextField fx:id="todoItem">
            <VBox.margin>
               <Insets bottom="30.0" />
            </VBox.margin></TextField>
            <HBox alignment="TOP_RIGHT">
                <Button onAction="#onAdd" text="Add">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin></Button>
                <Button onAction="#onCancel" text="Cancel" />
            </HBox>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
        </VBox>
    </children>
</AnchorPane>
