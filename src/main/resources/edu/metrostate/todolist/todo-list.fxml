<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.metrostate.todolist.ToDoListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER" spacing="10.0">
        <Text text="Filter Text"/>
        <TextField fx:id="filter"/>
        <Button onAction="#applyFilter" text="Apply"/>
    </HBox>

    <Text text="To Do List"/>
    <ListView fx:id="todoList"/>


    <Button onAction="#addNewItem" text="Add Todo Item"/>
</VBox>
